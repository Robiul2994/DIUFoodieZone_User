<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DIUFoodieZone"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodieZone"
        tools:targetApi="31" >
        <activity
            android:name=".presentation.order.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.ShopFoodViewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.ShopViewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.UserMainActivity"
            android:exported="true"
            android:theme="@style/Theme.FoodieZone.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.auth.RegistrationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="true" />
    </application>

</manifest>